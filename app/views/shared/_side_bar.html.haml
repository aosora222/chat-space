.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.nickname
      %ul.side-bar__user-name__top-items__icons
        %li.side-bar__user-name__top-items__icons__edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__user-name__top-items__icons__new
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-bar__group-list__name
          = group.nickname
        .side-bar__group-list__comment
          = group.show_last_message